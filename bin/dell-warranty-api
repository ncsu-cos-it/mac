#!/bin/bash
#
if [ $# -lt 1 ]; then
	echo ERROR: $0 {Dell ServiceTag}
	exit 0
fi

COMMACHECK=`echo $1 | grep ,`
if [ "$COMMACHECK" ]; then
	echo "ERROR: $0 {ServiceTag} {ServiceTag}"
	exit 0
fi
CHECK=`which curl`
if [ "$CHECK" = "" ]; then
  echo [ curl ] is not found.
  exit 0
fi
CHECK=`which jq`
if [ "$CHECK" = "" ]; then
  echo [ jq ] is not found.
  exit 0
fi
CWG=`pwd`
cd /tmp
access_token_url="https://apigtwb2c.us.dell.com/auth/oauth/v2/token"
grant_type="client_credentials"
# client_id="l7e0e01c38206545e68ef9b72ae8e32726"
# client_secret="6d178ca9b7bf46fb844347bd317b1e57"
client_id="l7e9dce9695b0046c1a2f17096a1a89487"
client_secret="1f94e1858b324ed3bf5c2dbf6052c6a6"

RESULT=`curl -s --request POST \
	--url "$access_token_url" \
	--header 'Content-Type: application/x-www-form-urlencoded' \
	--data-urlencode "client_id=$client_id" \
	--data-urlencode "client_secret=$client_secret" \
	--data-urlencode "grant_type=$grant_type"`

AUTHORIZATION=`jq '.access_token' <<< "$RESULT"`
ACCESS=`echo $AUTHORIZATION | tr -d '"'`
# echo ACCESS_TOKEN=$ACCESS

for a in ${@}
do
   SN=$a
   sn_url="https://apigtwb2c.us.dell.com/PROD/sbil/eapi/v5/asset-entitlements"

   curl -s --request GET --url 'https://apigtwb2c.us.dell.com/PROD/sbil/eapi/v5/asset-entitlements?servicetags='$SN'' --header "Authorization: Bearer $ACCESS" --header "accept: application/json"   | jq '.[]' >  $SN.json
   MODEL=`jq '. .productLineDescription' $SN.json`
   MODEL=`echo $MODEL | sed -e 's/ /_/g' | sed -e 's/"//g'`
   STARTDATE=`jq '.entitlements[0].startDate' $SN.json | cut -f1 -d"T" | sed -e 's/"//g'`
   ENDDATE=`jq '.entitlements[0].endDate' $SN.json | cut -f1 -d"T" | sed -e 's/"//g'`
   echo "$SN,$MODEL,$STARTDATE,$ENDDATE"
   /bin/rm $SN.json
done
cd $CWD
